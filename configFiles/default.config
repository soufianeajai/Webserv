server
	host: 0.0.0.0 // check getaddrinfo
	port: 8080 8081 8082 8083 // check negative and reservd ports
	server_names: example.com example1.com example2.com // needs root permissions
	error_page 404 /errors/404.html
	error_page 405 /errors/405.html
	error_page 406 /errors/405.html
	error_page 407 /errors/405.html
	redirect: old-path new-path 301 //error
	
	location /dir/ // check using stat
		methods: POST GET DELETE
		root: /tmp/www/ 
		autoindex: on // should be only on a directory
		default_file: index.html // should be only on a directory
		redirect: new-path 301  // path 3xx

	location /
		methods: POST GET

	location /script
		methods: POST GET 
		cgi_extension: php py 

	location /uploads
		methods: POST DELETE
		root: /tmp/www/dir
		autoindex: off
		default_file: upload-form.html //...



